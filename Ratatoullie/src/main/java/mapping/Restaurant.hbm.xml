<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="model.business">

	<class name="Restaurant" table="restaurant" >
	
		<id name="oid" type="java.lang.Long" column="id_restaurant" unsaved-value="0">
				<generator class="native" />
		</id>
		<property name="name" type="java.lang.String" column="name"/>
		
		<!-- FORMA A (Es la mas clara, a mi entender)-->
		<one-to-one name="location" 
			class="Location" 
			cascade="all" 
			constrained="true"			
			lazy="false">
        </one-to-one>
		
		<!-- FORMA B (funciona porque lo tengo andando en un sistema Real)
		<many-to-one 
			name="location"
			class="Location"
			cascade="all"
			lazy="false">
		</many-to-one>-->
		
		<!--  FORMA C lo saque de aca https://www.mkyong.com/hibernate/hibernate-one-to-one-relationship-example/ 
		Para que funcione hay que poner id_restaurant como clave foranea en Location.hbm.xml, no entiendo por que no se mapea el oid de Location
		<many-to-one 
			name="location"
			class="Location"
			column="id_location"
			unique="true"			
			cascade="all"
			lazy="false">
		</many-to-one>-->
		
		
		<!-- Other attributes that need to be added once basic data is working
		private Category category;
		private List<Menu> menus;
		private List<Comment> comments;
		private CommentFilter commentFilter;
		private NotificationFilter notificationFilter;
	 	-->
	
	
    </class>
</hibernate-mapping>