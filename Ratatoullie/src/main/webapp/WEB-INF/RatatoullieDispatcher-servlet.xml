            <value>src/main/java/mapping/business/MenuType.hbm.xml</value>
            <value>src/main/java/mapping/business/Restaurant.hbm.xml</value>
            <value>src/main/java/mapping/business/Tag.hbm.xml</value>            
         </list>
        </property>
 -->
	 </bean>
 	
 	
 	
 	<!-- Transaction -->
	<bean id="transactionManager" class="org.springframework.orm.hibernate5.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	
	<tx:annotation-driven transaction-manager="transactionManager"/>
	
	

</beans>